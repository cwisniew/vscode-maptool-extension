{
  "name": "maptool-add-on",
  "displayName": "MapTool Add-On Editor",
  "description": "Create and edit MapTool add-ons",
  "version": "0.0.1",
  "publisher": "RPTools",
  "engines": {
    "vscode": "^1.62.0"
  },
  "actionEvents": [
    "onView:mapToolAddOnInfo"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:maptool-add-on.MapToolAddOn",
    "workspaceContains:**/library.json",
    "onView:mapToolAddOnInfo"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "maptool-add-on.MapToolAddOn",
        "title": "Map Tool Add-Ons"
      },
      {
        "command": "maptool-add-on.refreshView",
        "title": "Refresh"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "mapToolAddOnInfo",
          "name": "MapTool Add On"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "maptool-add-on.refreshView",
          "when": "view == mapToolAddOnInfo",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.62.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "ts-loader": "^9.2.5",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "@vscode/test-electron": "^1.6.2"
  }
}
